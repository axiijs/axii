{
  "name": "axii",
  "version": "3.5.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "vite",
    "build": "vite build --config vite.prod.config.ts && node scripts/type.js",
    "test": "vitest run",
    "coverage": "vitest run --coverage && cp coverage/coverage-summary.json ./",
    "release": "release-it"
  },
  "author": "sskyy<skyking_H@hotmail.com>",
  "license": "MIT",
  "types": "./dist/axii.d.ts",
  "typings": "./dist/axii.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/axii.js",
      "require": "./dist/axii.umd.cjs",
      "types": "./dist/axii.d.ts"
    },
    "./jsx-runtime": {
      "import": "./dist/axii.js",
      "require": "./dist/axii.umd.cjs",
      "types": "./dist/axii.d.ts"
    },
    "./jsx-dev-runtime": {
      "import": "./dist/axii.js",
      "require": "./dist/axii.umd.cjs",
      "types": "./dist/axii.d.ts"
    }
  },
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@release-it/conventional-changelog": "^10.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.9.3",
    "@vitest/browser": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5",
    "release-it": "^18.1.2",
    "typescript": "5.6",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.0.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "data0": "^1.9.1"
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    },
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}",
      "push": true,
      "requireCleanWorkingDir": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": "npm test && npm run build"
    }
  }
}
